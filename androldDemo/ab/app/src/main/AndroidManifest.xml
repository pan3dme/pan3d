            android:screenOrientation="portrait"/>
        <activity android:name="Pan3d.etc.ZipActivity"
            android:screenOrientation="portrait" />
        <activity android:name="Pan3d.fbo.FBOActivity"
            android:screenOrientation="portrait" />
        <activity android:name="Pan3d.egl.EGLBackEnvActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="Pan3d.obj.ObjLoadActivity"
            android:screenOrientation="portrait" />
        <activity android:name="Pan3d.vr.VrContextActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="Pan3d.blend.BlendActivity"
            android:screenOrientation="portrait" />
        <activity android:name="Pan3d.light.LightActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>